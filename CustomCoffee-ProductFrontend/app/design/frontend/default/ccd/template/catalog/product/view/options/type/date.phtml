            // displayed in the calendar, even if it's from the previous month.
            // WARNING: this is magic. ;-)
            date.setDate(1);
            var day1 = (date.getDay() - this.firstDayOfWeek) % 7;
            if (day1 < 0)
                day1 += 7;
            date.setDate(-day1);
