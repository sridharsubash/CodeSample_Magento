            for (var i = 0; i < 6; ++i, row = row.nextSibling) {
                var cell = row.firstChild;
                if (this.weekNumbers) {
                    cell.className = "day wn";
                    cell.innerHTML = date.getWeekNumber();
                    cell = cell.nextSibling;
                }
                row.className = "daysrow";
                var hasdays = false, iday, dpos = ar_days[i] = [];
